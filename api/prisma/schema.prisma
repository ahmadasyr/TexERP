model taxOffice {
  id       Int        @id @default(autoincrement())
  name     String
  city     String
  customer customer[]
  account  account[]
}

model bank {
  id       Int        @id @default(autoincrement())
  name     String
  customer customer[]
}

model currency {
  id              Int             @id @default(autoincrement())
  name            String
  code            String          @db.Char(3)
  rate            Float
  exchangePercent Float?
  customer        customer[]
  customerPrice   customerPrice[]
  dyeOrderItem    dyeOrderItem[]
  yarnType        yarnType[]
  yarnOrderItem   yarnOrderItem[]
