model log {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  personnelId Int
  action      String
  description String
  // Relations
  personnel   personnel @relation(fields: [personnelId], references: [id])
}

enum NotificationCategory {
  General
  Customer
  Personnel
  Product
  Order
  Offer
  Dye
  Outsource
  Yarn
  Wrap
  Production
  Account
  Stock
  Machine
  Dofi
  Log
}

model notification {
  id          Int                  @id @default(autoincrement())
  createdAt   DateTime             @default(now())
  category    NotificationCategory
  personnelId Int
  title       String
  description String
  link        String?
  read        Boolean              @default(false)
  // Relations
  personnel   personnel            @relation(fields: [personnelId], references: [id])
}

enum issueStatus {
  Open
  InProgress
  Closed
}

model reportIssue {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  personnelId Int
  title       String
  description String
  status      issueStatus
  // Relations
  personnel   personnel   @relation(fields: [personnelId], references: [id])
}
