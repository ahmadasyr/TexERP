model dyeShipment {
  id         Int      @id @default(autoincrement())
  dyeOrderId Int
  createdAt  DateTime @default(now())
  sentDate   DateTime
  closed     Boolean  @default(false)

  // Relations
  dyeOrder        dyeOrder          @relation(fields: [dyeOrderId], references: [id])
  dyeShipmentItem dyeShipmentItem[]
